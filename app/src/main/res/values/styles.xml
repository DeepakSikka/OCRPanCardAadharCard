<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextInputLayoutDashboard" parent="AppTheme">
        <item name="hintTextAppearance">@style/AppTheme.TextFloatLabelAppearance1</item>
        <item name="errorTextAppearance">@style/AppTheme.TextErrorAppearance1</item>
        <item name="counterTextAppearance">@style/TextAppearance.Design.Counter</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="counterOverflowTextAppearance">@style/TextAppearance.Design.Counter.Overflow
        </item>
    </style>

    <style name="AppTheme.TextFloatLabelAppearance1" parent="TextAppearance.Design.Hint">
        <!-- Floating label appearance here -->
        <item name="android:textColor">@color/text_input</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="AppTheme.TextErrorAppearance1" parent="TextAppearance.Design.Error">
        <!-- Error message appearance here -->
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">16dp</item>
    </style>


</resources>
